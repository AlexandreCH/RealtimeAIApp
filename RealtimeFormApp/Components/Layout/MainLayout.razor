@using Microsoft.AspNetCore.Components.Sections
@inherits LayoutComponentBase

<div class="bg-blue-800 pb-48 sticky" style="z-index: -1; top: -4rem">
    <nav class="mx-2 px-8">

        <div class="flex items-center h-16 font-medium text-sm gap-4 text-gray-100">
            <NavLink class="py-2 px-3 rounded-md cursor-pointer hover:bg-blue-900/50 transition-colors" href="/" Match="NavLinkMatch.All">
                Home
            </NavLink>
            <NavLink class="py-2 px-3 rounded-md cursor-pointer hover:bg-blue-900/50 transition-colors" href="/" Match="NavLinkMatch.All">
                Vehicles
            </NavLink>
            <NavLink class="py-2 px-3 rounded-md cursor-pointer hover:bg-blue-900/50 transition-colors" href="/adduser">
                <span class="bi bi-person-nav-menu" aria-hidden="true"></span> Add user
            </NavLink>
            <NavLink class="py-2 px-3 rounded-md cursor-pointer hover:bg-blue-900/50 transition-colors" href="#">
                Sales
            </NavLink>
            <NavLink class="py-2 px-3 rounded-md cursor-pointer hover:bg-blue-900/50 transition-colors" href="#">
                Reports
            </NavLink>
            <NavLink class="py-2 px-3 rounded-md cursor-pointer hover:bg-blue-900/50 transition-colors ml-auto invisible md:visible" href="#">
                Settings
            </NavLink>
            <NavLink class="py-2 px-3 rounded-md cursor-pointer hover:bg-blue-900/50 transition-colors invisible md:visible" href="#">
                Log out
            </NavLink>
        </div>
    </nav>
</div>
<div class="bg-blue-800 sticky top-0 -mt-48">
    <header class="text-white mx-2 px-8 text-3xl font-semibold tracking-tight py-5 pb-7 flex items-center">
        <SectionOutlet SectionName="header-bar" />
    </header>
</div>

<main class="bg-white mx-10 min-h-72 rounded-lg p-8 shadow-lg">
    @Body
</main>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
